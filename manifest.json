{
  "manifest_version": 3,
  "name": "DBFCM Tools",
  "version": "1.2.0",
  "description": "DBFCM Tools: waitlist, availability, SMS drafts, and checkout dashboard",
  "permissions": [
    "storage",
    "sidePanel",
    "scripting",
    "tabs",
    "windows",
    "alarms",
    "cookies"
  ],
  "host_permissions": [
    "https://dbfcm.mykcapp.com/*",
    "http://localhost:*/*",
    "http://127.0.0.1:*/*"
  ],
  "action": {
    "default_title": "Open DBFCM Tools",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
